---
// About Component
---

<section id="about" class="relative min-h-screen py-20 px-6 overflow-hidden bg-[url('../../public/FFinal.png')] bg-cover bg-center">
    <div class="container mx-auto max-w-7xl">
        <!-- Título -->
        <div class="text-center mb-12 animate-fade-in-down">
            <h2 class="text-5xl md:text-6xl font-bold text-white"><span data-i18n="about.titulo">Sobre Mí</span></h2>
        </div>

        <!-- Bento Grid Layout -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 max-w-7xl mx-auto">
            <!-- 1. FORMULARIO DE CONTACTO (Izquierda - Grande) -->
            <div
                class="lg:row-span-3 bg-gradient-to-br from-blue-900/40 to-blue-700/30 rounded-3xl p-8 border-2 border-sky-500/30 shadow-xl shadow-sky-500/10 backdrop-blur-sm"
            >
                <h3 class="text-2xl font-bold text-white mb-2">
                    Formulario de Contacto
                </h3>
                <p class="text-gray-300 text-sm mb-6">
                    ¿Buscas un desarrollador comprometido con la calidad y la innovación?
Puedo colaborar en el diseño e implementación de soluciones tecnológicas eficientes y escalables.
No dudes en contactarme para discutir ideas o posibles proyectos.
                </p>

                <form
                    id="contact-form"
                    action="https://formspree.io/f/mrbywyrn"
                    method="POST"
                    class="space-y-5"
                >
                    <!-- Nombre -->
                    <div>
                        <label
                            for="name"
                            class="block text-sm font-medium text-gray-300 mb-2"
                        >
                            <span data-i18n="about.formulario.nombre">Nombre</span>
                        </label>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            required
                            class="w-full px-4 py-3 bg-gray-800/70 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-sky-500 focus:ring-2 focus:ring-sky-500/50 transition-all duration-300"
                            placeholder="Tu nombre completo"
                        />
                    </div>

                    <!-- Email -->
                    <div>
                        <label
                            for="email"
                            class="block text-sm font-medium text-gray-300 mb-2"
                        >
                            <span data-i18n="about.formulario.email">Email</span>
                        </label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="w-full px-4 py-3 bg-gray-800/70 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-sky-500 focus:ring-2 focus:ring-sky-500/50 transition-all duration-300"
                            placeholder="tu@email.com"
                        />
                    </div>

                    <!-- Mensaje -->
                    <div>
                        <label
                            for="message"
                            class="block text-sm font-medium text-gray-300 mb-2"
                        >
                            <span data-i18n="about.formulario.mensaje">Mensaje</span>
                        </label>
                        <textarea
                            id="message"
                            name="message"
                            rows="5"
                            required
                            class="w-full px-4 py-3 bg-gray-800/70 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-sky-500 focus:ring-2 focus:ring-sky-500/50 transition-all duration-300 resize-none"
                            placeholder="Cuéntame sobre tu proyecto o consulta..."
                        ></textarea>
                    </div>

                    <!-- Botón Enviar -->
                    <button
                        type="submit"
                        class="w-full py-3 bg-sky-500 hover:bg-sky-600 text-white font-semibold rounded-lg transition-all duration-300 shadow-lg shadow-sky-500/30 hover:shadow-sky-500/50 hover:scale-[1.02]"
                    >
                        <span data-i18n="about.formulario.enviar">Enviar Mensaje</span>
                    </button>
                </form>
            </div>

            <!-- 2. MINI BIOGRAFÍA (Arriba centro) -->
            <div
                class="bg-gradient-to-br from-blue-800/40 to-blue-600/30 rounded-3xl p-6 border-2 border-sky-500/30 shadow-xl shadow-sky-500/10 backdrop-blur-sm"
            >
            <h3 class="text-xl font-bold text-white mb-4" data-i18n="about.biografia.titulo">
                Perfil Profesional
              </h3>
              <p class="text-gray-300 text-sm leading-relaxed" data-i18n-html="about.biografia.parrafo1">
                Estudiante de <span class="text-sky-400 font-semibold"
                  >Ingeniería de Software (8.º ciclo)</span
                > en la Universidad Tecnológica del Perú (UTP), destacado en
                todos los ciclos dentro del <span
                  class="text-sky-400 font-semibold">décimo superior</span
                > y beneficiario de la <span
                  class="text-sky-400 font-semibold"
                  >Beca de Excelencia Académica</span
                >.
              </p>
              <p class="text-gray-300 text-sm leading-relaxed mt-3" data-i18n-html="about.biografia.parrafo2">
                Poseo una sólida comprensión en programación, redes, bases
                de datos, sistemas operativos y desarrollo de software. Mi
                enfoque está orientado al diseño e implementación de
                soluciones tecnológicas eficientes, seguras y escalables,
                con interés en el <span class="text-sky-400 font-semibold"
                  >desarrollo web, backend y arquitectura de software</span
                >.
              </p>
              <p class="text-gray-300 text-sm leading-relaxed mt-3" data-i18n-html="about.biografia.parrafo3">
                Me caracterizo por mi capacidad de <span
                  class="text-sky-400 font-semibold"
                  >aprendizaje rápido, adaptabilidad</span
                > y compromiso con la mejora continua.
              </p>
            </div>

            <!-- 3. FOTO (Derecha - Vertical completa, 3 filas) -->
            <div
                class="lg:row-span-3 bg-gradient-to-br from-gray-800/50 to-gray-900/50 rounded-3xl p-4 border-2 border-sky-500/30 shadow-xl shadow-sky-500/10 backdrop-blur-sm flex items-center justify-center overflow-hidden"
            >
                <div class="relative w-full h-full rounded-2xl overflow-hidden">
                    <!-- Shadow Box / Halo -->
                    <div
                        class="absolute inset-0 bg-gradient-to-br from-sky-400/20 to-blue-600/20 blur-xl"
                    >
                    </div>

                    <!-- Foto -->
                    <img
                        src="/Test 1.png"
                        alt="Joaquin Loa Denegri"
                        class="relative w-full h-full object-cover object-center scale-130 rounded-2xl border-2 border-sky-500/40"
                    />
                </div>
            </div>

            <!-- 4. ESTADÍSTICAS / LOGROS (Abajo centro) -->
            <div
                class="bg-gradient-to-br from-sky-900/40 to-sky-700/30 rounded-3xl p-6 border-2 border-sky-500/30 shadow-xl
         shadow-sky-500/10 backdrop-blur-sm"
            >
                <h3 class="text-xl font-bold text-white mb-4" data-i18n="about.logros.titulo">
                    Logros Destacados
                </h3>

                <div class="space-y-4">
                    <!-- Logro 1 -->
                    <div class="flex items-start gap-3">
                        <div
                            class="w-10 h-10 bg-sky-500/20 rounded-lg flex items-center justify-center border border-sky-500/30 flex-shrink-0"
                        >
                            <svg
                                class="w-5 h-5 text-sky-400"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-white font-semibold text-sm">
                                <span data-i18n="about.logros.logro1.titulo">Décimo Superior</span>
                            </p>
                            <p class="text-gray-400 text-xs" data-i18n="about.logros.logro1.descripcion">
                                En todos los ciclos académicos
                              </p>
                        </div>
                    </div>

                    <!-- Logro 2 -->
                    <div class="flex items-start gap-3">
                        <div
                            class="w-10 h-10 bg-yellow-500/20 rounded-lg flex items-center justify-center border border-yellow-500/30 flex-shrink-0"
                        >
                            <svg
                                class="w-5 h-5 text-yellow-400"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-white font-semibold text-sm">
                                <span data-i18n="about.logros.logro2.titulo">Beca de Excelencia</span>
                            </p>
                            <p class="text-gray-400 text-xs">
                                <span data-i18n="about.logros.logro2.descripcion">Universidad Tecnológica del Perú</span>
                            </p>
                        </div>
                    </div>

                    <!-- Logro 3 -->
                    <div class="flex items-start gap-3">
                        <div
                            class="w-10 h-10 bg-green-500/20 rounded-lg flex items-center justify-center border border-green-500/30 flex-shrink-0"
                        >
                            <svg
                                class="w-5 h-5 text-green-400"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-white font-semibold text-sm">
                                <span data-i18n="about.logros.logro3.titulo">8.º Ciclo</span>
                            </p>
                            <p class="text-gray-400 text-xs">
                                <span data-i18n="about.logros.logro3.descripcion">Ingeniería de Software - UTP</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // Manejo del formulario de contacto
    const contactForm = document.getElementById("contact-form");

    contactForm?.addEventListener("submit", (e) => {
        e.preventDefault();

        // Obtener datos del formulario
        const formData = new FormData(e.target as HTMLFormElement);
        const name = formData.get("name");
        const email = formData.get("email");
        const message = formData.get("message");

        // Aquí puedes integrar con servicios como:
        // - Formspree: https://formspree.io/
        // - EmailJS: https://www.emailjs.com/
        // - Web3Forms: https://web3forms.com/

        console.log("Formulario enviado:", { name, email, message });

        // Mostrar mensaje de éxito (temporal)
        alert(
            "¡Mensaje enviado con éxito! Pronto me pondré en contacto contigo.",
        );

        // Limpiar formulario
        (e.target as HTMLFormElement).reset();
    });
</script>

<style>
    @import "tailwindcss";
    /* Animación fade-in-down */
    @keyframes fade-in-down {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-down {
        animation: fade-in-down 0.8s ease-out;
    }

    /* Estilos de focus para inputs */
    input:focus,
    textarea:focus {
        @apply ring-2 ring-sky-500/50 border-sky-500;
    }
</style>
